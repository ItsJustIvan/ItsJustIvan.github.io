---
import BaseLayout from "./BaseLayout.astro";
import dayjs from "dayjs";
import localizedFormat from "dayjs/plugin/localizedFormat";

dayjs.extend(localizedFormat);

const { title, description, date, mainImage } = Astro.props;
const displayDate = date ? dayjs(date).format("ll") : "";
import { Image } from "astro:assets";
---

<BaseLayout title={title} description={description} image={mainImage} ogType="article">
  <main class="md:flex md:justify-center">
    <article class="prose prose-lg max-w-[750px] prose-img:mx-auto">
      {mainImage && <Image width={750} height={422} format="webp" src={mainImage} alt={title} class="w-full mb-6" />}
      <h1 class="title my-2 text-4xl font-bold">{title}</h1>
      {date && <time>{displayDate}</time>}
      <div class="divider my-2"></div>
      <slot />
    </article>
  </main>
</BaseLayout>
