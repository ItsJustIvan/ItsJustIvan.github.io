        .slide-content p {
            font-size: 1.2em;
            margin-bottom: 30px;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        }

        .carousel-nav-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent black */
            color: white;
            border: none;
            padding: 15px 10px;
            font-size: 1.5em;
            cursor: pointer;
            z-index: 10;
            border-radius: 8px; /* Rounded corners */
