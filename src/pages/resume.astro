---
import Layout from '../layouts/BaseLayout.astro'
import Hero from '../components/Hero.astro'
import ResumeSummary from '../components/ResumeSummary.astro'
import Experience from '../components/Experience.astro'
import Skills from '../components/Skills.astro'
import DownloadCTA from '../components/DownloadCTA.astro'

// Page metadata
const pageTitle = 'Resume | Ivan Yip'
const pageDescription = 'Digital marketing strategist, B2B SaaS expert, and technical creative. View my resume, skillset, and work history.'
---

<Layout title={pageTitle} description={pageDescription}>
    <Hero 
    heading="Yes, I've done the work."
    subheading="Strategy, execution, and everything in between. Here's the breakdown."
    primaryCta={{
      label: "Download Resume",
      href: "/Ivan-Yip-Resume.pdf",
      external: true
    }}
    showModalButton={true}
  />
  <ResumeSummary />
  <Skills />

  <Experience />


  <DownloadCTA />
</Layout>
